extends layout

block navbar
	include navbar

block content
	.bg-form
		.container.h-100
			.row.h-100.justify-content-center.align-items-center
				.col-sm-9.col-md-7.col-lg-5.my-auto
					if (error && error.length > 0)
						.alert.alert-danger.mt-3.text-center!= error

					.card.card-signin.my-3
						.card-body
							h5.card-title.text-center Laundry System
							form(action="/api/users/login", method="post").form-signin
								input(type='hidden', name='_csrf', value=_csrf)
								.form-label-group
									input#inputUsername.form-control(type='text', name='username', placeholder='Username', required, autofocus, minlength="3")
									label(for='inputUsername') Username
								.form-label-group
									input#inputPassword.form-control(type='password', name="password", placeholder='Password', required, minlength="6")
									label(for='inputPassword') Password
									
								button.btn.btn-lg.btn-primary.btn-block.text-uppercase(type='submit') Sign in
							
							//- .text-center.mt-3
								a(href="/forgot") Forgot Password?

							.text-center.mt-3
								a(href="/register") Register Here



